<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uber_Universitario.Pages.ForgetPasswordPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content >
        <StackLayout Padding="10,30,10,10" Spacing="70">
            <Label Text="Recuperación de contraseña"
                   FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   FontSize="30"
                   HorizontalTextAlignment="Center"/>

            <Entry x:Name="enrollmentIdEntry"
                   Keyboard="Numeric"
                   Placeholder="Matricula"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TranslationY="90"/>

            <Button x:Name="passwordRecoveryButton"
                    Text="Recuperar contraseña"
                    TextColor="White"
                    Clicked="passwordRecoveryButton_Clicked"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    TranslationY="190"
                    BackgroundColor="Navy"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>