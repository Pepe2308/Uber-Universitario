<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Uber_Universitario.Pages.NextPasswordChangePage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="10,30,10,10" Spacing="10">
            <Entry x:Name="newPasswordEntry"
                   Placeholder="Ingresar nueva contraseña"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand"
                   IsPassword="True"/>
            <Entry x:Name="newPasswordConfirmationEntry"
                   Placeholder="Confirmar contraseña"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="CenterAndExpand"
                   IsPassword="True"/>
            <Button x:Name="changePassword"
                    Text="Cambiar contraseña"
                    BackgroundColor="Navy"
                    TextColor="White"
                    HorizontalOptions="EndAndExpand"
                    VerticalOptions="EndAndExpand"
                    Clicked="changePassword_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>